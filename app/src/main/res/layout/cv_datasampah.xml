<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:foreground="@drawable/border_cv_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Kategori"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_subkategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sub Kategori"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_kategori"
                app:layout_constraintTop_toBottomOf="@+id/result_kategori" />

            <TextView
                android:id="@+id/txt_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jumlah"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_subkategori"
                app:layout_constraintTop_toBottomOf="@+id/result_subkategori" />

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Harga"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_jumlah"
                app:layout_constraintTop_toBottomOf="@+id/result_jumlah" />

            <TextView
                android:id="@+id/txt_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sub Total"
                android:textColor="#FF0000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_harga"
                app:layout_constraintTop_toBottomOf="@+id/result_harga" />

            <TextView
                android:id="@+id/result_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:text="PET"
                app:layout_constraintStart_toEndOf="@+id/txt_kategori"
                app:layout_constraintTop_toTopOf="@+id/txt_kategori" />

            <TextView
                android:id="@+id/result_subkategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rongsok Campur"
                app:layout_constraintStart_toStartOf="@+id/result_kategori"
                app:layout_constraintTop_toTopOf="@+id/txt_subkategori" />

            <TextView
                android:id="@+id/result_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Kg"
                app:layout_constraintStart_toStartOf="@+id/result_subkategori"
                app:layout_constraintTop_toTopOf="@+id/txt_jumlah" />

            <TextView
                android:id="@+id/result_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 1.000/Kg"
                app:layout_constraintStart_toStartOf="@+id/result_jumlah"
                app:layout_constraintTop_toTopOf="@+id/txt_harga" />

            <TextView
                android:id="@+id/result_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 5.000"
                android:textColor="#FF0000"
                app:layout_constraintStart_toStartOf="@+id/result_harga"
                app:layout_constraintTop_toTopOf="@+id/txt_subtotal" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>